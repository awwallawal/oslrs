{
  "name": "oslsr",
  "version": "1.0.0",
  "description": "Oyo State Labour & Skills Registry (OSLSR)",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter \"*\" dev",
    "build": "pnpm exec turbo run build",
    "test": "pnpm exec turbo run test",
    "test:web": "pnpm exec turbo run test --filter @oslsr/web",
    "test:api": "pnpm exec turbo run test --filter @oslsr/api",
    "lint": "pnpm exec turbo run lint",
    "services:up": "docker compose -f docker/docker-compose.dev.yml up -d",
    "services:down": "docker compose -f docker/docker-compose.dev.yml down",
    "services:logs": "docker compose -f docker/docker-compose.dev.yml logs -f"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "devDependencies": {
    "turbo": "^1.13.0"
  }
}
