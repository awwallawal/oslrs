# App Database (PostgreSQL 15)
DATABASE_URL=postgres://user:password@localhost:5432/app_db
DATABASE_URL_REPLICA=postgres://marketplace_readonly:password@localhost:5432/app_db

# Redis (Job Queue & Caching)
REDIS_URL=redis://localhost:6379

# ODK Central Integration
ODK_SERVER_URL=https://odk.example.com
ODK_ADMIN_EMAIL=admin@example.com
ODK_ADMIN_PASSWORD=change-me

# Security
JWT_SECRET=super-secret-jwt-key
REFRESH_TOKEN_SECRET=super-secret-refresh-key

# Notifications (AWS SES or equivalent)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY=your-access-key
AWS_SES_SECRET_KEY=your-secret-key

# Backups (S3-Compatible)
S3_BUCKET_NAME=oslsr-backups
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# Admin Alerts
SUPER_ADMIN_EMAIL=alerts@oslsr.gov.ng

# Server Config
PORT=3000
NODE_ENV=development
